---
interface Props {
  src: string;
  srcset?: string;
  alt?: string;
  className?: string;
}
const { src, srcset, alt, className } = Astro.props;
---
<picture>
  <source type="image/webp" srcset={srcset} />
  <img src={src} alt={alt} loading="lazy" decoding="async" class={className} />
</picture>

<style lang="scss" scoped>
img {
    max-width: 100%;
}
.circle {
    border-radius: 50%;
}
</style>