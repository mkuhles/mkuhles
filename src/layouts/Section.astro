---
import "../styles/layouts/section.scss";
import Image from '../components/Image.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
    type?: string;
    id?: string;
    className?: string;
    entry?: CollectionEntry<"sections">;
    image?: {src: string, srcset: string, alt: string, className?: string},
}

let { type, id = '', entry = null, image } = Astro.props;
const className = 'section '
    + (type ? ` section--${type}` : "") 
    + (Astro.props.className ? ` ${Astro.props.className}` : '');
console.log(entry);
---

<section class={className} id={id}>
    <div class="section__content">
        {image && 
            <div class="section__image">
                <Image src={image.src} srcset={image.srcset} alt={image.alt} className={image.className} />
            </div>
        }
        <div class="section__text">
            <slot />
        </div>
    </div>
</section>