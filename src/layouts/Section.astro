---
import "../styles/layouts/section.scss";
import Image from '../components/Image.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
    type?: string;
    id?: string;
    className?: string;
}

let { type, id = '' } = Astro.props;
const className = 'section '
    + (type ? ` section--${type}` : "") 
    + (Astro.props.className ? ` ${Astro.props.className}` : '');
---

<section class={className} id={id}>
    <div class="section__content">
        <slot />
    </div>
</section>