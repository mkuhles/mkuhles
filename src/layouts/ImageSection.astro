---
import "../styles/layouts/section.scss";
import Image from '../components/Image.astro';
import type { CollectionEntry } from 'astro:content';
import Section from "./Section.astro";

interface Props {
    type?: string;
    id?: string;
    className?: string;
    image?: {src: string, srcset: string, alt: string, className?: string},
}

let { type, id = '', image, className } = Astro.props;
---

<Section type={type} id={id} className={className}>
        {image && 
            <div class="section__image">
                <Image src={image.src} srcset={image.srcset} alt={image.alt} className={image.className} />
            </div>
        }
        <div class="section__text">
            <slot />
        </div>
</Section>